// SHARE THIS MODULE

.ShareContainer {
  border: 1px solid #FF3700;
  border-radius: 5px;
  width: 89%;
  max-width: 34rem;
  margin: 2rem;
}
// overrides mobile safari input styling
input {
    -webkit-appearance: none;
    -webkit-border-radius: 0;
    border-radius: 0;
}
.InputShare {
  border-radius: 0;
  border: none;
  height: 2.9rem;
  width: 24rem;
  margin: 0 0 0 .5rem;
  border-right: 1px solid #FF3700;
  background: transparent;
  font-size: 1.4rem;
  color: #888;
  webkit-appearance: none;
}
.BtnShare {
  border: none;
  border-radius: 0;
  background: transparent;
  font-size: 1.4rem;
  color: #FF3700;
  padding: 0 1rem;
}
